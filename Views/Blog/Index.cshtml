

<h1>Bloglar</h1>

<div class="row g-4">
    @foreach (var BlogPost in ViewBag.BlogPost)
    {
        <div class="col-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@BlogPost.Title</h5>
                    <p class="card-text">@BlogPost.Summary</p>
                    
                   <img src="@BlogPost.ImageUrl" class="card-img-top" alt="@BlogPost.Title">
                </div>
            </div>
        </div>
    }
</div>
